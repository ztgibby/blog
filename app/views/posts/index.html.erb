<p><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th class="green" style="font-size:36px;">Name</th>
      <th class="green" style="font-size:36px;">Title</th>
      <th class="green" style="font-size:36px;">Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Show', post %></td>

        <% if user_signed_in? && (post.user_id == current_user.id || current_user.admin) %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path if user_signed_in? %>
